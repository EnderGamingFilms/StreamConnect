{
    "id": "tits",
    "enabled": false,
    "name": "T.I.T.S - Websocket",
    "description": "This will connect to TITS to control items and triggers",
    "type": "websocket",
    "connection": {
        "host": "127.0.0.1/websocket",
        "apiKey": "",
        "port": 42069
    },
    "endpoints": [
        {
            "name": "GetItems",
            "request": {
                "apiName": "TITSPublicApi",
                "apiVersion": "1.0",
                "requestID": "someID",
                "messageType": "TITSItemListRequest",
                "sendImage": true
            },
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSItemListResponse",
                "data": {
                    "items": [
                        {
                            "ID": "{{itemID}}",
                            "name": "{{itemName}}",
                            "encodedImage": "{{encodedImage}}"
                        }
                    ]
                }
            }
        },
        {
            "name": "ThrowItems",
            "request": {
                "apiName": "TITSPublicApi",
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSThrowItemsRequest",
                "data": {
                    "items": ["{{itemID1}}", "{{itemID2}}"],
                    "delayTime": 0.05,
                    "amountOfThrows": 50,
                    "errorOnMissingID": false
                }
            },
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSThrowItemsResponse",
                "data": {
                    "numberOfThrownItems": 50
                }
            }
        },
        {
            "name": "GetItemInfo",
            "request": {
                "apiName": "TITSPublicApi",
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSItemInfoRequest",
                "data": {
                    "itemID": "{{itemID}}"
                }
            },
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSItemInfoResponse",
                "data": {
                    "ID": "{{itemID}}",
                    "name": "{{itemName}}",
                    "encodedImage": "{{encodedImage}}"
                }
            }
        },
        {
            "name": "GetTriggers",
            "request": {
                "apiName": "TITSPublicApi",
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSTriggerListRequest"
            },
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSTriggerListResponse",
                "triggerCount": 2,
                "data": {
                    "triggers": [
                        {
                            "ID": "{{triggerID1}}",
                            "name": "{{triggerName1}}"
                        },
                        {
                            "ID": "{{triggerID2}}",
                            "name": "{{triggerName2}}"
                        }
                    ]
                }
            }
        },
        {
            "name": "ActivateTrigger",
            "request": {
                "apiName": "TITSPublicApi",
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSTriggerActivateRequest",
                "data": {
                    "triggerID": "{{triggerID}}"
                }
            },
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSTriggerActivateResponse"
            }
        }
    ],
    "events": {
        "onGettingHit": {
            "messageType": "TITSHitEvent",
            "handler": "handleGettingHitEvent",
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSHitEvent",
                "data": {
                    "itemID": "{{itemID}}",
                    "itemName": "{{itemName}}",
                    "triggerID": "{{triggerID}}",
                    "triggerName": "{{triggerName}}",
                    "strength": "{{strength}}",
                    "direction": {
                        "x": "{{directionX}}",
                        "y": "{{directionY}}",
                        "z": "{{directionZ}}"
                    }
                }
            }
        },
        "onTriggerActivated": {
            "messageType": "TITSTriggerActivatedEvent",
            "handler": "handleTriggerActivatedEvent",
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSTriggerActivatedEvent",
                "data": {
                    "triggerID": "{{triggerID}}"
                }
            }
        },
        "onTriggerEnded": {
            "messageType": "TITSTriggerEndedEvent",
            "handler": "handleTriggerEndedEvent",
            "response": {
                "apiName": "TITSPublicApi",
                "timestamp": 0,
                "apiVersion": "1.0",
                "requestID": "{{requestId}}",
                "messageType": "TITSTriggerEndedEvent",
                "data": {
                    "triggerID": "{{triggerID}}"
                }
            }
        }
    }
}
