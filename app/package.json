{
	"description": "An Electron app with SvelteKit",
	"author": "ItWasEnder",
	"name": "streamconnect",
	"version": "0.0.1",
	"private": true,
	"main": "./electron/electron.js",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev npm run dev:all",
		"dev:noui": "cross-env NO_WINDOW=true NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "vite dev",
		"dev:electron": "npm run build:electron && electron ./build/electron/electron.js",
		"build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
		"build:svelte": "vite build",
		"build:electron": "tsc --project tsconfig.electron.json && cp electron/preload.cjs build/electron/preload.cjs",
		"package:electron": "electron-builder -w --config build.config.json",
		"package": "cross-env NODE_ENV=production npm run build && npm run package:electron",
		"clean": "rimraf dist build"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@types/express": "^4.17.21",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.17",
		"check-dependencies": "^2.0.0",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"daisyui": "^4.6.0",
		"electron": "^28.2.1",
		"electron-builder": "^24.9.1",
		"electron-reloader": "^1.2.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.33",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"rimraf": "^5.0.5",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwind-scrollbar": "^3.0.5",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"dependencies": {
		"axios": "^1.6.7",
		"electron-serve": "^1.3.0",
		"electron-window-state": "^5.0.3",
		"express": "^4.18.2",
		"iconify-icon": "^2.0.0"
	}
}
